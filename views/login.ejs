<% layout("./layout/boilerplate") %>

<div class="form__container content__container">
    <div class="form__wrapper">
        <h2 class="form--heading"> LOG INTO YOUR ACCOUNT</h2>
        <form class="form__content form" id="login__form">
            <label>Email Address</label>
            <input  id="email" type="email">
            <label>Password</label>
            <input  id="password" type="password">
            <a href="/reset-pass">Forget Password</a>
            <button class="btn form__btn">LOGIN</button>
        </form>
    </div>
</div>



