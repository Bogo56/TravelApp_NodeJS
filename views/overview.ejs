<% layout("./layout/boilerplate") %>

    
        <section class="content__main">
            <div class = "cards_list--wrapper">

                <!-- CARDS TEMPLATE -->

                <% for (let tour of tours){ %>
                    <div class="card">
                        <img class="card__img" src="<%= tour.imageCover %>" crossorigin="anonymous"/>
                        <div class="card__heading"><span class= "card__heading--span"><%= tour.tourName %></span></div>
                        <div class="card__body">
                            <div class = "card__difficulty">Difficulty: <%=tour.difficulty %> </div>
                            <div class = "card__summary"><%= tour.summary %> </div>
                            <div class = "card__info">
                                <div class= "card__info--item">
                                    <img class ="info__item--img"src="/img/location_icon.png">
                                    <p class = "info__item--text">Sofia,Bulgaria</p>
                                </div>
                                <div class= "card__info--item">
                                    <img class ="info__item--img"src="/img/flag_icon.png">
                                    <p class = "info__item--text"> <%= tour.locations.length %> Stops</p>
                                </div>
                                <div class= "card__info--item">
                                    <img class ="info__item--img"src="/img/calendar_icon.png">
                                    <p class = "info__item--text"><%= tour.duration %> Days</p>
                                </div>
                                <div class= "card__info--item">
                                    <img class ="info__item--img"src="/img/group_icon.png">
                                    <p class = "info__item--text">10 People</p>
                                </div>
                            </div>
                        </div>
                        <div class = "card__footer">
                            <div class="card__footer--wrapper">
                                <p class= "card__footer--price"><span class="price--number footer__span--num">â‚¬<%= tour.price %></span> per Person</p>
                                <p class= "card__footer--rating"><span class="rating--number footer__span--num"><%= tour.ratingsAvg %></span> rating (<%= tour.ratingsNum %>)</p>
                                <a class="btn card__footer--btn" href="/tours/<%= tour.id %>"> DETAILS </a>
                            </div>
                        </div>
                    </div> 

                <% } %>

               
            </div>            
        </section>
    